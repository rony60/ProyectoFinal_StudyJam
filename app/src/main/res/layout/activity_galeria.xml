<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/lapaznoche"
    tools:context="com.example.usuario.tourlapaz.GaleriaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ImagenDetalle1"
                android:padding="20dp"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:src="@drawable/lunad"

                />

            <ImageView
                android:id="@+id/ImagenDetalle2"
                android:padding="20dp"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:src="@drawable/lunad"

                />

            <ImageView
                android:id="@+id/ImagenDetalle3"
                android:padding="20dp"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:src="@drawable/lunad"

                />

        </LinearLayout>


    </ScrollView>

</LinearLayout>
